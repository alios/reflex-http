                       base >=4.8 && <4.9,
                       bytestring >= 0.10,
                       containers >= 0.5,
                       dependent-map >= 0.2,
                       http-types >= 0.9,
                       mtl >= 2.2,
                       reflex >=0.4 && <0.5,
                       text >=1.2 && <1.3,
                       wai >=3.2 && <3.3,
                       wai-extra >= 3.0,
                       wai-websockets >=3.0 && <3.1,
                       warp >= 3.2,
                       websockets >= 0.9
